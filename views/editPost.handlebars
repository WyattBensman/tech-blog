<div class="px-4 sm:px-8 md:px-16 lg:px-20 xl:px-24 mt-8 flex justify-center">
    <div class="border w-1/2">
        <header class=" mx-8 py-4 border-b">
            <h2 class="text-3xl font-semibold">Edit Post</h2>
        </header>
        <section class="my-4 mx-8 flex flex-col">
            <form class="editForm" action="">
                {{!-- Grab Edited Title --}}
                <label class="block text-xl mb-2" for="title">Title:</label>
                <input type="text" class="block border w-full text-lg py-1 rounded" name="title" id="editTitle">
                {{!-- Grab Edited Content --}}
                <label class="block text-xl mb-2 mt-4" for="username">Content:</label>
                <textarea name="content" id="editContent" class="block border w-full text-lg rounded" cols="30"
                    rows="3"></textarea>
                <div class="mx-auto text-center flex justify-between">
                    {{!-- Handle Update Button --}}
                    <button
                        class="bg-green-500 hover:bg-green-600 text-white font-bold ms-16 mt-4 py-2 px-4 w-1/3 rounded"
                        type="submit" id="editPost">Update</button>
                    {{!-- Handle Delete Button --}}
                    <button class="bg-red-500 hover:bg-red-600 text-white font-bold me-16 mt-4 py-2 px-4 w-1/3 rounded"
                        type="button" id="deletePost">Delete</button>
                </div>
            </form>
        </section>
    </div>